{
  "name": "core-app",
  "version": "0.0.1",
  "description": "Core Specialized App",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "db:setup": "node scripts/setup-db-schemas.js",
    "prisma:generate": "npm run prisma:generate:usuarios && npm run prisma:generate:productos && npm run prisma:generate:datos-maestros && npm run prisma:generate:guias && npm run prisma:generate:documentos",
    "prisma:generate:usuarios": "prisma generate --schema=./prisma/usuarios/schema.prisma",
    "prisma:generate:productos": "prisma generate --schema=./prisma/datos-maestros/productos/schema.prisma",
    "prisma:generate:datos-maestros": "prisma generate --schema=./prisma/datos-maestros/schema.prisma",
    "prisma:generate:guias": "prisma generate --schema=./prisma/guias/schema.prisma",
    "prisma:generate:documentos": "prisma generate --schema=./prisma/documentos/schema.prisma",
    "prisma:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^8.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^6.0.0",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^9.0.8",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "nest-winston": "^1.10.0",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "prisma": "^5.22.0"
  }
}
