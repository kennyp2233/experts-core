# ====================================
# DATABASE CONFIGURATION
# ====================================

# PostgreSQL Connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
#
# Examples:
# - Local: postgresql://postgres:password@localhost:5432/experts_control?schema=public
# - Docker: postgresql://postgres:postgres@postgres:5432/experts_control?schema=public
# - Cloud: postgresql://user:pass@host.cloud.com:5432/db?schema=public&sslmode=require

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/experts_control?schema=public"

# ====================================
# APPLICATION CONFIGURATION
# ====================================

# Server Port
PORT=3000

# Node Environment
NODE_ENV=development

# ====================================
# JWT SECRETS
# ====================================

# Admin JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secure-admin-jwt-secret-change-this

# Worker JWT Secret (generate with: openssl rand -base64 32)
WORKER_JWT_SECRET=your-secure-worker-jwt-secret-change-this

# JWT Expiration Times
JWT_EXPIRES_IN=7d
WORKER_JWT_EXPIRES_IN=30d

# ====================================
# QR CODE CONFIGURATION
# ====================================

# Depot QR Secret (for cryptographic validation)
DEPOT_QR_SECRET=your-secure-depot-qr-secret-change-this

# ====================================
# FEATURE FLAGS (optional overrides)
# ====================================

# Enable/disable features globally (managed in database)
# TEMPORAL_VALIDATION_ENABLED=true
# CRYPTOGRAPHIC_VALIDATION_ENABLED=true
# GEOLOCATION_VALIDATION_ENABLED=true
# PHOTO_VALIDATION_ENABLED=false
# PATTERN_VALIDATION_ENABLED=true

# ====================================
# LOGGING
# ====================================

# Log Level: error | warn | info | debug
LOG_LEVEL=info

# ====================================
# CORS CONFIGURATION
# ====================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# ====================================
# FILE STORAGE
# ====================================

# Photo storage path
PHOTO_STORAGE_PATH=./uploads/photos

# Max photo size (bytes)
MAX_PHOTO_SIZE=10485760
